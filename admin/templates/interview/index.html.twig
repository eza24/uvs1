                                            <td>{% set i=i+1 %}{{ i }}</td>
                                            <td><a href="{{ path('interview_show', {'id': interview.id}) }}"><img src="/upload/{{ interview.picture }}" alt="User" class="img-half-10" style="height: 180px"></a></td>
                                            <td><a href="{{ path('interview_show', {'id': interview.id}) }}">{{ interview.title }}</a></td>
                                            <td>
												{% if interview.types==1 %}
													<span class="badge badge-secondary badge-danger mb-1">Онцгой</span>
												{% else %}
													<span class="badge badge-secondary badge-light mb-1">Энгийн</span>
												{% endif %}
											</td>
                                            <td>{{ interview.date ? interview.date|date('Y-m-d') : '' }}</td>
                                            {#                                        <td>{{ article.comments }}</td>#}
                                            <td>{{ interview.sort }}</td>
                                            <td>
                                                {% if interview.status==1 %}
                                                    <span class="badge badge-pill badge-success mb-1">Идэвхтэй</span>
                                                {% else %}
