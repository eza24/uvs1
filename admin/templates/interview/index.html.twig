                    {% endfor %}
                    <div class="card-body">
                        <div class="scroll_horizontal">
                            <table class="table dataTable layout-wrap" id="dateTable">
                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>Зураг</th>
