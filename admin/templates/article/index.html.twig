                            <button type="button" class="btn btn-theme"> <i class="ik ik-plus-circle"></i> Нийтлэл шинээр нэмэх </button>
                        </a>
                    </div>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                        <br>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                        <br>
                    {% endfor %}
                    <div class="card-body">
                        <div class="dt-responsive">
                            <table id="alt-pg-dt" class="user-table table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>Зураг</th>
                                        <th>Гарчиг</th>
                                        <th>Төрөл</th>
                                        <th>Огноо</th>
                                        <th>Дараалал</th>
                                        <th>Төлөв</th>
                                        <th><i class="ik ik-settings"></i></th>
                                    </tr>
                                </thead>
                                <tbody>
                                {%  set i=0 %}
                                {% for article in articles %}
                                    <tr class="list-item">
                                        <td>{% set i=i+1 %}{{ i }}</td>
                                        <td><a href="{{ path('article_show', {'id': article.id}) }}"><img src="/upload/{{ article.picture }}" alt="User" class="img-half-10" style="height: 180px"></a></td>
                                        <td><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a></td>
                                        <td>
											{% if article.types==1 %}
												<span class="badge badge-secondary badge-danger mb-1">Онцгой</span>
											{% else %}
												<span class="badge badge-secondary badge-light mb-1">Энгийн</span>
											{% endif %}
										</td>
                                        <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
{#                                        <td>{{ article.comments }}</td>#}
                                        <td>{{ article.sort }}</td>
                                        <td>
                                            {% if article.status==1 %}
                                                <span class="badge badge-pill badge-success mb-1">Идэвхтэй</span>
                                            {% else %}
                                                <span class="badge badge-pill badge-secondary mb-1">Идэвхгүй</span>
                                            {% endif %}
                                        </td>
{#                                        <td>{{ article.who }}</td>#}
